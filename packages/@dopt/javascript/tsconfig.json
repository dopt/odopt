{
  "extends": "@dopt/config/tsconfig/base.json",
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "noEmit": false,
    "rootDir": "./src",
    "declarationMap": false,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist",
    "target": "es5"
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "rollup.config.ts",
    "rollup.test.config.ts",
    "src/__tests__/*"
  ],
  "include": ["**/*.ts"]
}
