{
  "name": "@dopt/react",
  "version": "0.2.2",
  "private": false,
  "description": "An SDK for accessing and transitioning block state in Dopt",
  "license": "MIT",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "👇required package scripts": "",
    "build": "rollup --config rollup.config.ts --configPlugin typescript; rm -rf ./dist/types",
    "clean": "shx rm -rf ./dist",
    "dev": "NODE_ENV=development rollup -w --config rollup.config.ts --configPlugin typescript --no-watch.clearScreen",
    "format": "prettier --w .",
    "formatcheck": "pnpm exec check-formatting",
    "lint": "eslint .",
    "test": "pnpm test:jest; pnpm test:sh",
    "typecheck": "tsc --noEmit",
    "☝️ required package scripts": "",
    "prepublishOnly": "NODE_ENV=production pnpm build;",
    "test:jest": "jest",
    "test:sh": "./src/__tests__/environment-aware-builds.sh"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@dopt/logger": "0.0.1",
    "@dopt/javascript-common": "0.0.0",
    "socket.io-client": "^4.5.3"
  },
  "devDependencies": {
    "@dopt/check-formatting": "workspace:*",
    "@dopt/config": "workspace:*",
    "@rollup/plugin-replace": "^5.0.0",
    "@rollup/plugin-typescript": "8.5.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/jest": "29.2.1",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "eslint": "8.27.0",
    "eslint-plugin-react": "7.31.10",
    "jest": "29.2.2",
    "jest-environment-jsdom": "^29.2.1",
    "prettier": "2.7.1",
    "rollup": "3.2.5",
    "rollup-plugin-dts": "5.0.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "shx": "0.3.4",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.0",
    "tsup": "6.4.0",
    "typescript": "4.8.4"
  }
}
