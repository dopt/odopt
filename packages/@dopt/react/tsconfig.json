{
  "extends": "@dopt/config/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declarationMap": false,
    "declaration": true,
    "declarationDir": "./types",
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "noEmit": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": "./src",
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "dist",
    "rollup.test.config.ts",
    "rollup.config.ts",
    "src/__tests__/*"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
