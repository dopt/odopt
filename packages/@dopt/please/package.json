{
  "name": "@dopt/please",
  "version": "0.0.1",
  "description": "A CLI for generating packages in the Dopt monorepo",
  "opensource": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": "./cli.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "👇required package scripts": "",
    "build": "pnpm run clean; pnpm run generate-parser; tsup;",
    "clean": "shx rm -rf ./dist; rm -rf src/parser.ts",
    "dev": "pnpm run build --watch src",
    "format": "prettier --w .",
    "formatcheck": "pnpm exec check-formatting",
    "lint": "eslint .",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "☝️ required package scripts": "",
    "generate-parser": "node ./generate-parser.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@pnpm/find-workspace-dir": "^4.0.2",
    "@pnpm/find-workspace-packages": "^4.0.39",
    "@types/micromatch": "^4.0.2",
    "chalk": "4.1.2",
    "concurrently": "7.4.0",
    "micromatch": "^4.0.5"
  },
  "devDependencies": {
    "@dopt/check-formatting": "workspace:*",
    "@dopt/config": "workspace:*",
    "@dopt/tsup": "workspace:*",
    "@types/jest": "29.1.1",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "esbuild": "0.15.10",
    "esbuild-jest": "0.5.0",
    "eslint": "8.24.0",
    "eslint-plugin-react": "7.31.8",
    "jest": "29.1.2",
    "prettier": "2.7.1",
    "shx": "0.3.4",
    "peggy": "2.0.1",
    "ts-pegjs": "2.1.0",
    "tsup": "6.2.3",
    "typescript": "4.8.4"
  }
}
