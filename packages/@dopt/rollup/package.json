{
  "name": "@dopt/rollup",
  "version": "0.0.0",
  "private": false,
  "description": "A reusable rollup configuration, used by our open source browser packages",
  "homepage": "https://github.com/dopt/odopt/tree/main/packages/%40dopt/rollup",
  "repository": {
    "type": "git",
    "url": "https://github.com/dopt/odopt.git",
    "directory": "packages/@dopt/rollup"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "drb": "./bin/drb.sh",
    "drw": "./bin/drw.sh"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "üëárequired package scripts": "",
    "build": "tsup",
    "clean": "shx rm -rf ./dist",
    "dev": "pnpm run build --watch src",
    "format": "prettier --w .",
    "formatcheck": "pnpm exec check-formatting",
    "lint": "eslint .",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "‚òùÔ∏è required package scripts": "",
    "prepublishOnly": "NODE_ENV=production pnpm -w exec turbo run build --filter=\"@dopt/rollup\""
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@rollup/plugin-typescript": "11.1.1",
    "rollup": "3.25.1",
    "rollup-plugin-dts": "5.3.0",
    "rollup-plugin-peer-deps-external": "2.2.4"
  },
  "devDependencies": {
    "@dopt/check-formatting": "workspace:*",
    "@dopt/config": "workspace:*",
    "@dopt/env": "workspace:*",
    "@dopt/esbuild-plugins": "workspace:*",
    "@dopt/tsup": "workspace:*",
    "@types/jest": "29.5.2",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "5.59.11",
    "@typescript-eslint/parser": "5.59.11",
    "esbuild": "0.18.2",
    "esbuild-jest": "0.5.0",
    "eslint": "8.42.0",
    "eslint-plugin-react": "7.32.2",
    "jest": "29.5.0",
    "package-json-type": "1.0.3",
    "prettier": "2.8.8",
    "shx": "0.3.4",
    "tsup": "7.0.0",
    "typescript": "4.9.5"
  },
  "openSource": true
}
