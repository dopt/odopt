{
  "name": "@dopt/react-card",
  "version": "6.0.2",
  "description": "A React card component for building experiences with Dopt",
  "homepage": "https://github.com/dopt/odopt/tree/main/components/%40dopt/react/card",
  "repository": {
    "type": "git",
    "url": "https://github.com/dopt/odopt.git",
    "directory": "components/@dopt/react/card"
  },
  "license": "MIT",
  "private": false,
  "main": "./dist/cjs/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.cjs.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "require": "./dist/cjs/hooks.cjs.js",
      "import": "./dist/hooks.esm.js",
      "types": "./dist/hooks.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "typesVersions": {
    "*": {
      "hooks": [
        "./dist/hooks.d.ts"
      ]
    }
  },
  "scripts": {
    "👇required package scripts": "",
    "build": "pkg-build",
    "clean": "pkg-clean",
    "dev": "pkg-build -w",
    "format": "pkg-format",
    "formatcheck": "pkg-format -c",
    "lint": "pkg-lint -i sandbox",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "☝️ required package scripts": "",
    "prepublishOnly": "pnpm -w exec turbo run build --filter=\"@dopt/react-card\""
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@dopt/react": "workspace:*",
    "react": ">=17.0.2"
  },
  "devDependencies": {
    "@dopt/check-formatting": "workspace:*",
    "@dopt/config": "workspace:*",
    "@dopt/pkg-build": "workspace:*",
    "@dopt/pkg-lint": "workspace:*",
    "@dopt/pkg-clean": "workspace:*",
    "@dopt/jest-style-transform": "workspace:*",
    "@dopt/react": "workspace:*",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/jest": "29.5.2",
    "@types/react": "18.2.12",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "@dopt/pkg-format": "workspace:*",
    "ts-jest": "^29.0.3",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@dopt/core-rich-text": "workspace:*",
    "@dopt/react-rich-text": "workspace:*",
    "@dopt/react-theme": "workspace:*",
    "@dopt/semantic-data-layer-card": "workspace:*",
    "@vanilla-extract/css": "1.11.1",
    "clsx": "1.2.1"
  },
  "openSource": true
}
